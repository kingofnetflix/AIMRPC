    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>AIMRPC.ico</ApplicationIcon>
    <PackageIcon>AIMRPC.png</PackageIcon>
    <Description>Discord Rich Presence for AOL Instant Messenger</Description>
    <Title>AIMRPC</Title>
    <Company>kingofnetflix</Company>
    <Authors>kingofnetflix</Authors>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="AIMRPC.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Downloads\AIMRPC.png">
